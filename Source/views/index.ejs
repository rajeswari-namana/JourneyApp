<% include partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to JourneyApp!!</h1>
        <p>View our hand picked palces to travel...</p>
        <p>
            <a class= "btn btn-primary btn-lg" href="/photographs/new">Add New Place</a>
        </p>
        </div>
    </header>



    <div class="row text-center" style= "display:flex; flex-wrap: wrap; ">
    <% photographs.forEach(function(photo){ %>
    <div class="col-md-3 col-md-6">
        <div class="thumbnail">
            <img src="<%=photo.image%>" alt="">
            <div class="caption">
                <h3><%= photo.name%></h3>
            </div>
            <a href="/photographs/<%=photo._id%>" class="btn btn-primary">More Info</a>
        </div>
        </div>
    <% }) %>
    </div>
</div>

<% include partials/footer%>
